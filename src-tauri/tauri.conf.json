{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "my-assistant",
    "version": "0.0.0"
  },
  "tauri": {
	"systemTray": {
      "iconPath": "icons/icon.ico"
    },
    "allowlist": {
      "all": false
    },
    "windows": [
      {
        "title": "My Assistant",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.codeinphp.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
